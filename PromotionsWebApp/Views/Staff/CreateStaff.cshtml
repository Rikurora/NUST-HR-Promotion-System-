@model CreateStaffVM
@using PromotionsWebApp.Models
@using PromotionsWebApp.Domain.Abstract
@{
    ViewData["Title"] = "Create Staff";
    SelectList rankList = (SelectList)ViewData["Rank"];
}
<form asp-action="CreateStaff" asp-controller="Staff" method="post" role="form" class="center-align">
    @Html.AntiForgeryToken()
    <div class="row z-depth-2">
        <h4 class="center-align">Create Staff - @Model.Username</h4>
        <div class="divider"></div>
        <div class="row">
            <div class="col s8 offset-s2">
                <input type="hidden" asp-for="@Model.StaffId" value="@Model.StaffId" />
                <div class="red-text" asp-validation-summary="All"></div>
                <div class="row">
                    <div class="input-field col s8 offset-s2">
                        <label>Rank</label>
                        <select class="normalSelect" asp-for="@Model.RankId" asp-items="rankList">
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s10">
                        <Label class="select-label active">Department</Label>
                        <select class="normalSelect" asp-for="Department" asp-items="Html.GetEnumSelectList<DepartmentEnum>()">
                            <option disabled selected="selected" value="">Please select Department</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s8 offset-s2">
                        @Html.LabelFor(model => model.DateEmployed)
                        <input type="text" class="datepicker validate" asp-for="DateEmployed" />
                        <span asp-validation-for="DateEmployed" class="red-text text-darken-2" />
                    </div>
                </div>              
            </div>
        </div>

        <div class="row">
            <div class="input-field col s8 offset-s2">
                <a class="btn waves-effect waves-light btn-large red lighten-1" asp-action="Index">
                    <span class="material-icons md-dark md-24 matIcon">
                        cancel
                    </span>
                    <span class="black-text">Cancel</span>
                </a>
                <button type="submit" name="cmdButton" class="btn waves-effect waves-light btn-large green lighten-1">
                    <span class="material-icons md-dark md-24 matIcon">
                        send
                    </span>
                    <span class="black-text">Submit</span>
                </button>
            </div>

        </div>
    </div>
</form>
@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
<script>
    $(document).ready(function () {
        $('select').formSelect();
    });
</script>

}
