
@{
    ViewData["Title"] = "Change Password";
}
@using PromotionsWebApp.Domain.Entities
@using PromotionsWebApp.Domain.Abstract
@using PromotionsWebApp.Models
@model ResetPasswordVM
<form asp-action="ResetPassword" asp-controller="Account" method="post" role="form" class="center-align">
    <div class="row z-depth-2">
        <input type="hidden" asp-for="Email" class="form-control" />
        <input type="hidden" asp-for="Token" class="form-control" />
        <h4 class="center-align">New Password</h4>
        <div class="divider"></div>
        <div class="red-text" asp-validation-summary="All"></div>
        <div class="row">
            <div class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        @Html.LabelFor(model => model.Password)
                        <input type="password" class="validate" asp-for="Password" />
                        <span asp-validation-for="Password" class="red-text text-darken-2" />
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.LabelFor(model => model.ConfirmPassword)
                        <input type="password" class="validate" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="red-text text-darken-2" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s8 offset-s2">
            <a class="btn waves-effect waves-light btn-large red lighten-1" asp-action="Login">
                <span class="material-icons md-dark md-24 matIcon">
                    cancel
                </span>
                <span class="black-text">Cancel</span>
            </a>
            <button type="submit" name="cmdButton" class="btn waves-effect waves-light btn-large green lighten-1">
                <span class="material-icons md-dark md-24 matIcon">
                    send
                </span>
                <span class="black-text">Submit</span>
            </button>
        </div>
    </div>
</form>
@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}