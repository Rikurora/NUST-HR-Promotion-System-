@{
    ViewData["Title"] = "Dashboard";
}
<div class="row">
    <div class="row">
        <h3 class="center-align">
            Promotions Web App
        </h3>
    </div>
    @if (User.IsInRole("Staff"))
    {
        <div class="row">
        </div>
        <div class="row">
            <div class="col s8 offset-s2">
                <a asp-action="Profile" asp-controller="Staff">
                    <div class="card-panel nustColor center center-align">

                        <span id="" class="material-icons white-text md-24">
                            local_atm
                        </span>
                        <span class="card-title white-text text-darken-4">Profile</span>
                    </div>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col s8 offset-s2">
                <a asp-action="Index" asp-controller="Promotions">
                    <div class="card-panel nustColor center center-align">

                        <span id="" class="material-icons white-text md-24">
                            store
                        </span>
                        <span class="card-title white-text text-darken-4">Promotions</span>
                    </div>
                </a>
            </div>
        </div>
    }
    else
    {
        @if (User.IsInRole("Admin"))
        {
            <div class="row">

                <div class="col s8 offset-s2">
                    <a asp-action="Index" asp-controller="Account">
                        <div class="card-panel nustColor center center-align">

                            <span id="" class="material-icons white-text md-24">
                                manage_accounts
                            </span>
                            <span class="card-title white-text text-darken-4">Users</span>
                        </div>
                    </a>

                </div>
            </div>
        }

        <div class="row">
            <div class="col s8 offset-s2">
                <a asp-action="Index" asp-controller="Staff">
                    <div class="card-panel nustColor center center-align">

                        <span id="" class="material-icons white-text md-24">
                            local_atm
                        </span>
                        <span class="card-title white-text text-darken-4">Staff</span>
                    </div>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col s8 offset-s2">
                <a asp-action="Index" asp-controller="Promotions">
                    <div class="card-panel nustColor center center-align">

                        <span id="" class="material-icons white-text md-24">
                            store
                        </span>
                        <span class="card-title white-text text-darken-4">Promotions</span>
                    </div>
                </a>
            </div>
        </div>

    }
</div>
